      
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no-image.jpeg"%>
        <table class="table">
          <tbody><tr></tr>
          <tr>
  	        <th>name</th>
  	        <th><%= user.name %></th>
          </tr>
          <tr>
  	        <th>introduction</th>
  	        <th><%= user.introduction %></th>
          </tr>
          <tr>
            <% if current_user.following?(user) %>
              <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %>
            <% else %>
              <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
            <% end %>
          </tr>
          
          </tbody>
        </table>
        <div class="row">
          <%= link_to '', edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
          <% end %>
        </div>
      </div>