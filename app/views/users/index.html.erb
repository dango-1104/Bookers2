<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no-image.jpeg"%>
      <table class="table">
        <tbody><tr></tr>
        <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
        </tr>
        <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
        </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to '', edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>


      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "form-control book_title" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: "form-control book_title" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>


    <div class="col-md-8 offset-md-1">
  		<h2>Users</h2>
  		<table class="table table-hover table-inverse">
  		  <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
    		 <% @users.each do |user| %>
    		  <tr>
    		    <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no-icon.jpeg"%></td>
      			<td><%= user.name %></td>
      			<td><%= link_to "フォロー数: #{user.followings.count}", user_followings_path(user.id) %></td>
      			<td><%= link_to "フォロワー数: #{user.followers.count}", user_followers_path(user.id) %></td>
        		<td><% if current_user.id != user.id %>
                  <% if current_user.following?(user) %>
                    <th><%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %></th>
                  <% else %>
                    <th><%= link_to "Follow", user_relationships_path(user.id), method: :post %></th>
                  <% end %>
                <% end %></td>

      			<td><%= link_to "Show", user_path(user) %></td>
      		</tr>
      		<% end %>
      	</tbody>
  		</table>
  	</div>
  </div>
</div>